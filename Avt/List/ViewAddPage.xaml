<Page x:Class="LISTURLIC.Avt.List.ViewAddPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LISTURLIC.Avt.List"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewAddPage" Width="673" Height="373" Background="#FFF1E7E7">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="6*"/>
            <RowDefinition />
        </Grid.RowDefinitions>
        <TextBlock Text="Новое предприятие"
                   Width="300"
                   Height="30"
                   FontSize="20"/>

        <StackPanel Grid.Row="1">
        <Button x:Name="AddBtn"
                    Width="180"
                    Content="Новое предприятие"
                    Margin="0 30" Click="AddBtn_Click"/>
        <Button x:Name="AddBtn1"
                    Width="180"
                    Content="Продолжить добавление" Click="AddBtn1_Click"/>
        </StackPanel>

        <WrapPanel Grid.Row="2"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center">
            <Button x:Name="EndBtn"
                    Content="Отмена" Click="EndBtn_Click"/>
        </WrapPanel>
    </Grid>
</Page>
