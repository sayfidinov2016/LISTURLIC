<Page x:Class="LISTURLIC.Poisk.PoiskPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LISTURLIC.Poisk"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Поиск" Width="673" Height="373" Background="#FFF1E7E7">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="7*"/>
        </Grid.RowDefinitions>

        <TextBlock Text="Поиск"
                   Width="100"
                   Height="30"
                   FontSize="20"/>

        <WrapPanel Grid.Row="1"
                    VerticalAlignment="Top"
                   Margin="0 80"
                   HorizontalAlignment="Center">
        <TextBox x:Name="PoiskTxt"     
                Width="500"
                Height="50" BorderBrush="#FF208C91"
                 FontSize="30"/>
            <Button x:Name="PioslBtn" 
                    BorderBrush="{x:Null}" 
                    Background="#FF208C91"
                    Height="50"
                    Content="Найти"
                    FontSize="20" Click="PioslBtn_Click"/>
        </WrapPanel>
    </Grid>
</Page>
